<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"

    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/monument_image"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/monument_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/monument_image"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark"
        tools:text="Monument Name" />

    <TextView
        android:id="@+id/monument_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monument_name"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_light"
        tools:text="monument distance" />

</RelativeLayout>