<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context='.MainActivity'
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/monument_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/floutage_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                />

            <com.example.clswwearosgpsmemo2022.Utils.StrokedText
                android:id="@+id/monument_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_thambi"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:textAllCaps="true"
                android:textColor="#FBFBFB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                tools:text="Name" />


            <com.example.clswwearosgpsmemo2022.Utils.StrokedText
                android:id="@+id/monument_distance"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/monument_name"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_thambi"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:textAlignment="center"
                android:textColor="#F7F14A"
                android:textSize="15sp"
                tools:text="distance" />

            <ImageView
                android:id="@+id/visitedIcon"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/monument_distance"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />


        </RelativeLayout>
    </LinearLayout>

